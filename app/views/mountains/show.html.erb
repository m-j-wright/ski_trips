<div>
  <div>
    <h1>
      Mountain #<%= @the_mountain.id %> details
    </h1>

    <div>
      <div>
        <a href="/mountains">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_mountain/<%= @the_mountain.id %>">
          Delete mountain
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_mountain.name %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_mountain.image %>
      </dd>

      <dt>
        Trips count
      </dt>
      <dd>
        <%= @the_mountain.trips_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_mountain.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_mountain.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit mountain
    </h2>

    <form action="/modify_mountain/<%= @the_mountain.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_mountain.name %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_mountain.image %>">
      </div>

      <div>
        <label for="trips_count_box">
          Trips count
        </label>

        <input type="text" id="trips_count_box" name="query_trips_count" value="<%= @the_mountain.trips_count %>">
      </div>

      <button>
        Update mountain
      </button>
    </form>
  </div>
</div>

<hr>
